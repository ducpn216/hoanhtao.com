@model Web.FrontEnd.Models.Account.ChangePasswordModel
@using Web.FrontEnd.App_Code;

@{
    Layout = "~/Views/Shared/_Inside.cshtml";
}

@section BreadCrumbSection{
    <li class="active">
        <a href="@LinkManager.CHANGE_PASSWORD">
            Đổi mật khẩu
        </a>
    </li>
}

@section ContentSection{

    <div class="detail_content">

        @if (Model != null)
        {
            using (Html.BeginForm(null, null, FormMethod.Post))
            {
                <table class="tbForm">
                    <tr>
                        <td colspan="2" align="center">
                            <span class="message @(Model.IsValid ? "white" : "red")" style="font-weight:bold">
                                @Html.Raw(Model.Message)
                            </span>
                        </td>
                    </tr>
                    <tr>
                        <td class="left">Mật khẩu hiện tại</td>
                        <td>
                            @Html.PasswordFor(x => x.CurrentPassword, new { @class = "form-control m-bot15", required = "" })
                        </td>
                    </tr>
                    <tr>
                        <td class="left">Mật khẩu mới</td>
                        <td>
                            @Html.PasswordFor(x => x.NewPassword, new { @class = "form-control m-bot15", required = "" })
                        </td>
                    </tr>
                    <tr>
                        <td class="left">Xác nhận mật khẩu mới</td>
                        <td>@Html.PasswordFor(x => x.ConfirmNewPassword, new { @class = "form-control m-bot15", required = "" })</td>
                    </tr>

                    <tr>
                        <td class="left"></td>
                        <td>
                            <img id="img-captcha-register" src='/Captcha/' />
                            <a class="btn-captcha-register" onclick="return ReloadCaptcha('img-captcha-register', '/Captcha/');">
                                <img src="/Content/images/website/change.png" alt="Thay hình khác" width="20px" />
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <td class="left">Mã xác nhận</td>
                        <td>@Html.TextBoxFor(x => x.Captcha, new { @class = "form-control shot popup_register_captcha", required = "" })</td>
                    </tr>

                    <tr>
                        <td class="left"></td>
                        <td>
                            <input type="submit" value="Xác nhận" class="btn-accept" />
                        </td>
                    </tr>
                </table>
            }
        }
    </div>
}

