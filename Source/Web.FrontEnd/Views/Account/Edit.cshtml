@model Web.FrontEnd.Models.Account.ProfileModel
@using Web.FrontEnd.App_Code;

@{
    Layout = "~/Views/Shared/_Inside.cshtml";
}

@section BreadCrumbSection{
    <li class="active">
        <a href="@LinkManager.PROFILE">
            Thông tin
        </a>
    </li>
}

@section ContentSection{

    <div class="detail_content">

        @if (Model != null)
        {
            using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                <table class="tbForm" width="420px">
                    <tr>
                        <td colspan="2" style="color:red !important; text-align:center !important;">
                            Quý khách xin vui lòng cập nhật đầy đủ thông tin email và số điện thoại để nhận được sự hỗ trợ tốt nhất.
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" align="center">
                            <span class="message @(Model.IsValid ? "green" : "red")">
                                @Html.Raw(Model.Message)
                            </span>
                        </td>
                    </tr>
                    <tr>
                        <td class="left">Tài khoản</td>
                        <td>
                            <b style="color:red">@User.Identity.Name</b>
                        </td>
                    </tr>
                    <tr>
                        <td class="left">Email</td>
                        <td>@Html.TextBoxFor(x => x.Email, new { @class = "form-control m-bot15", required = "" })</td>
                    </tr>
                    <tr>
                        <td class="left">Số điện thoại</td>
                        <td>@Html.TextBoxFor(x => x.Phone, new { @class = "form-control m-bot15", required = "" })</td>
                    </tr>
                    <tr>
                        <td class="left"></td>
                        <td>
                            <img id="img-captcha-register" src='/Captcha/' />
                            <a class="btn-captcha-register" onclick="return ReloadCaptcha('img-captcha-register', '/Captcha/');">
                                <img src="/Content/images/website/change.png" alt="Thay hình khác" width="20px" />
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <td class="left">Mã xác nhận</td>
                        <td>@Html.TextBoxFor(x => x.Captcha, new { @class = "form-control shot popup_register_captcha", required = "" })</td>
                    </tr>
                    <tr>
                        <td class="left"></td>
                        <td>
                            <input type="submit" value="Cập nhật" class="btn-accept" />
                        </td>
                    </tr>
                </table>
            }
        }
    </div>
}