                <div class="col col4">
                    <div class="title_icon">
                        <h2>Gia Tăng Sức Mạnh</h2>
                        <span class="icon"></span>
                    </div>
                    <ul class="list_bikip">
                        @foreach (var category in Model.CamNang.GiaTangSucManh)
                        {
                            <li>
                                <a href="@LinkManager.GetCamNangLink(category.CategoryId)">@category.CategoryName</a>
                            </li>
                        }
                    </ul>
                </div>
                <div class="col col5">
                    <div class="title_icon">
                        <h2>Tính Năng</h2>
                        <span class="icon"></span>
                    </div>
                    <ul class="list_bikip">
                        @foreach (var category in Model.CamNang.TinhNang)
                        {
                            <li>
                                <a href="@LinkManager.GetCamNangLink(category.CategoryId)">@category.CategoryName</a>
