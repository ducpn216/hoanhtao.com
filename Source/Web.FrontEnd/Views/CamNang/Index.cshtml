                        @foreach (var category in Model.CamNang.VoLamSoNhap)
                        {
                            <li>
                                <a href="@LinkManager.GetCamNangLink(category.CategoryId)">@category.CategoryName</a>
                            </li>
                        }
                    </ul>
                </div><div class="col col3">
                    <div class="title_icon">
                        <h2>Hướng Dẫn Luyện Cấp</h2>
