@using System.Collections;
@using Web.BackEnd.Models;

@model ChangePasswordModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section TitleSection{
    Đổi mật khẩu
}

@if (TempData["Message"] != null)
{
    @Html.Raw(TempData["Message"])
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal tasi-form", enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-lg-12">

            <section class="panel">
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Mật khẩu hiện tại</label>
                        <div class="col-sm-10">
                            @Html.PasswordFor(x => x.CurrentPassword, new { @class = "form-control", required = "" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Mật khẩu mới</label>
                        <div class="col-sm-10">
                            @Html.PasswordFor(x => x.NewPassword, new { @class = "form-control", required = "" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Xác nhận mật khẩu mới</label>
                        <div class="col-sm-10">
                            @Html.PasswordFor(x => x.RetypeNewPassword, new { @class = "form-control", required = "" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Xác nhận</button>
                        </div>
                    </div>

                </div>
            </section>
        </div>
    </div>
}
