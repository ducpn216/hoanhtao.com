@using System.Collections;
@using Web.BackEnd.Models;

@model OnlineNumberPageModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section TitleSection{

    Số online hiện tại
}

@if (TempData["Message"] != null)
{
    @Html.Raw(TempData["Message"])
}

<script>
    $(document).ready(function () {
        $(".btn").click(function () {
            var url = "/Game/OnlineNumber/?";

            var serverId = $(".ddlServer").val();
            if (serverId != "") {
                url += "serverId=" + serverId;
            }

            window.location = url;
        });
    });
</script>

<div class="row">
    <div class="col-lg-12">

        <section class="panel">
            <header class="panel-heading">
                <div class="clearfix">
                    <div class="btn-group">
                        @Html.DropDownListFor(x => x.SelectedServerId, Model.ServerList.ToList(), new { @class = "form-control ddlServer" })
                    </div>
                    <div class="btn-group">
                        <button type="button" class="btn btn-info">Xác nhận</button>
                    </div>
                </div>
            </header>
            <div class="panel-body">
                <table class="table table-striped table-advance table-hover">
                    <thead>
                        <tr>
                            <th><i></i>User đang online</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="col-xs-1 col-xs-1 col-md-1">
                                @Model.OnlineNumber
                            </td>
                        </tr>
                    </tbody>
                </table>



            </div>
        </section>
    </div>
</div>