@using System.Collections;
@using Web.BackEnd.Models;

@model ServerFormModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var server = Model.ServerModel;
}

@section TitleSection{
    <div class="btn-group">
        <a href="@Url.Action("Index", new { status = Model.SelectedStatus })" class="btn btn-danger"><i class="icon-backward"></i> Trở lại</a>
    </div>

    Server
}

@if (TempData["Message"] != null)
{
    @Html.Raw(TempData["Message"])
}

@using (Html.BeginForm(null, null, new { serverId = server.ServerId }, FormMethod.Post, new { @class = "form-horizontal tasi-form", enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-lg-12">

            <section class="panel">
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">ServerId</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.ServerModel.ServerId, new { @class = "form-control", required = "" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">ServerName</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.ServerModel.ServerName, new { @class = "form-control", required = "" })
                        </div>
                    </div>
                    @*<div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Kích hoạt</label>
                        <div class="col-sm-10">
                            Hiện @Html.RadioButtonFor(x => x.ServerModel.IsActive, true) -
                            Ẩn @Html.RadioButtonFor(x => x.ServerModel.IsActive, false)
                        </div>
                    </div>*@
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Tình trạng</label>
                        <div class="col-sm-10">
                            Kích hoạt @Html.CheckBoxFor(x => x.ServerModel.IsActive) - 
                            Mới @Html.CheckBoxFor(x => x.ServerModel.IsNew)
                            @*@Html.CheckBoxFor(x => x.PostModel.Status, new { name = "chkIsActive", @class = "checkbox form-control", style = "width: 20px" })*@
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">@(Model.ServerModel.ServerId > 0 ? "Xác nhận" : "Thêm")</button>
                            @Html.HiddenFor(x => x.ServerModel.ServerId)
                        </div>
                    </div>

                </div>
            </section>
        </div>
    </div>
}
